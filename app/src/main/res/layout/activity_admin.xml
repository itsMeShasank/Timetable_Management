<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cse.timetableapp.AdminActivity">

    <ImageView

        android:paddingLeft="20dp"
        android:paddingRight="25dp"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:src="@drawable/vignanlogohighres"
        android:layout_marginTop="50sp"/>

    <Spinner
        android:id="@+id/spinner_day"
        android:layout_width="216dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/change_textbox_color"
        android:hint="Username"
        android:layout_marginTop="25dp"
        />

    <Spinner
        android:id="@+id/spinner_period"
        android:layout_width="216dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/change_textbox_color"
        android:hint="Username"
        android:layout_marginTop="25dp"
        />

    <Button
        android:id="@+id/free_faculty_button"
        android:layout_width="214dp"
        android:layout_height="51dp"
        android:background="@drawable/buttondesign"
        android:text="Free Faculty"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/free_classroom_button"
        android:layout_width="214dp"
        android:layout_height="51dp"
        android:background="@drawable/buttondesign"
        android:text="Free ClassRooms"
        android:layout_marginTop="25dp"
        android:textAllCaps="false"
        android:layout_marginLeft="10dp"
         />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FCF2FA"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/francis1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="80dp"
                    android:text="Free class rooms"
                    android:textAllCaps="true"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FCF2FA"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:src="@drawable/francis2withbg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="110dp"
                    android:text="Free Faculty"
                    android:textAllCaps="true"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/subject_faculty"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FCF2FA"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:src="@drawable/dealingsub" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="50dp"
                    android:text="subject faculty dealing"
                    android:textAllCaps="true"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/faculty_workload"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FCF2FA"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/facultywokload" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="90dp"
                    android:text="FacultyWorkload"
                    android:textAllCaps="true"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/change_timetable"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FCF2FA"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:src="@drawable/uploadexcelimg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="125dp"
                    android:text="upload excel"
                    android:textAllCaps="true"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/change_faculty_details"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FCF2FA"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/csestafflist" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="70dp"
                    android:layout_marginBottom="10dp"
                    android:text="Upload cse staff list"
                    android:textAllCaps="true"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>



    </ScrollView>


    <TextView android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:textSize="12dp"
        android:gravity="center"
        android:fontFamily="casual"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"
        android:text="\u00A9 2022 Dept. of CSE     |     All Rights Reserved"/>


</LinearLayout>