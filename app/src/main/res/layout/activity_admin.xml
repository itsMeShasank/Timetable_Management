<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cse.timetableapp.AdminActivity">

    <ImageView

        android:paddingLeft="20dp"
        android:paddingRight="25dp"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:src="@drawable/vignanlogohighres"
        android:layout_marginTop="50sp"/>

    <Spinner
        android:id="@+id/spinner_day"
        android:layout_width="216dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/change_textbox_color"
        android:hint="Username"
        android:layout_marginTop="25dp"
        />

    <Spinner
        android:id="@+id/spinner_period"
        android:layout_width="216dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/change_textbox_color"
        android:hint="Username"
        android:layout_marginTop="25dp"
        />

    <Button
        android:id="@+id/free_faculty_button"
        android:layout_width="214dp"
        android:layout_height="51dp"
        android:background="@drawable/buttondesign"
        android:text="Free Faculty"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/free_classroom_button"
        android:layout_width="214dp"
        android:layout_height="51dp"
        android:background="@drawable/buttondesign"
        android:text="Free ClassRooms"
        android:layout_marginTop="25dp"
        android:textAllCaps="false"
        android:layout_marginLeft="10dp"
         />

    <Button
        android:id="@+id/faculty_workload"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:layout_width="214dp"
        android:layout_height="51dp"
        android:background="@drawable/buttondesign"
        android:text="Faculty Workload"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"/>

    <Button
        android:id="@+id/subject_faculty"
        android:layout_width="214dp"
        android:layout_height="51dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@drawable/buttondesign"
        android:text="Subject - Faculty"
        android:textAllCaps="false"
         />
    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:background="@drawable/buttondesign"
        android:text="logout"
        android:textAllCaps="false"
        />



    <TextView android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:textSize="12dp"
        android:gravity="center"
        android:fontFamily="casual"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"
        android:text="\u00A9 2022 Dept. of CSE     |     All Rights Reserved"/>

</LinearLayout>