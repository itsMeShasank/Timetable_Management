<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".TimetableUpdate">
    <com.google.android.material.button.MaterialButton
        app:strokeColor="#F65A91"
        android:id="@+id/browseexcelfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/openingbuttondesign"
        android:text="Browse"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="315dp"
        android:layout_margin="40dp"/>

    <Spinner
        android:id="@+id/spinner_fourth_year"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:gravity="center"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="40sp"
        android:background="@drawable/change_textbox_color"
        android:textColor="@color/black"
        android:paddingTop="10dp"
        android:entries="@array/Allyears"
        android:paddingBottom="10dp" />

    <com.google.android.material.button.MaterialButton
        app:strokeColor="#F65A91"
        android:id="@+id/savedata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/openingbuttondesign"
        android:text="Submit"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="315dp"
        android:layout_margin="40dp"/>

</LinearLayout>