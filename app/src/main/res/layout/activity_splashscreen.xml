<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cse.timetableapp.splashscreen"
    android:background="@color/white">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/begin"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_marginTop="140sp"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/calendar" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TIME TABLE MANAGEMENT"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="POWERED BY "
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:layout_marginTop="15sp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-condensed-medium"
            />
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="CSE"
            android:layout_weight="1"
            android:textSize="30sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold"
            android:textAlignment="textStart"/>
    </LinearLayout>
    <TextView android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="24dp"
            android:text="Shasank G"/>
        <TextView
            android:layout_width="2dp"
            android:gravity="center"
            android:layout_height="24dp"
            android:text="|"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="24dp"
            android:text="Siddi Saai G"/>
        <TextView
            android:layout_width="2dp"
            android:gravity="center"
            android:layout_height="24dp"
            android:text="|"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="Vaishnavi G"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guidance: Pushya Chaparala"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_marginBottom="5sp"/>

</LinearLayout>