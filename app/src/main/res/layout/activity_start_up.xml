<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cse.timetableapp.StartUpActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:paddingRight="15sp"
        android:src="@drawable/vignanlogohighres"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40sp"
        android:layout_marginBottom="40sp"/>

    <com.google.android.material.tabs.TabLayout
        app:tabBackground="@drawable/tabheaddesign"
        app:tabTextColor="#F9F9F9"
        app:tabIndicatorColor="#F68989"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabIndicatorHeight="30dp"
        android:id="@+id/OpenTabLayout"/>



    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/OpenViewPager"/>

</LinearLayout>